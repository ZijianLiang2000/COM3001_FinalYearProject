= include_gon


.title{:style => "margin: auto;width: 50%;padding: 50px;"}
    = back_link
    %br
    %br
    %br
    %h1{:style => "color: white;"} Congratulations! 
    %h3{:style => "color: white;"} You have selected a restaurant location in #{@lad_name} 
    %h6{:style => "color: rgb(249, 243, 238);"} Near (#{@lat},#{@long})
    %br
    %br

    -# @lad_reco_percentage=params[:lad_reco_percentage]
